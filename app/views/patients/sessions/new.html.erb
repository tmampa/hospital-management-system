

<form action="/patients/sign_in" accept-charset="UTF-8" method="post" class="max-w-md mx-auto">
  <h2 class="text-2xl font-bold mb-4"> Patient Log in</h2>
  <div class="mb-4">
    <label for="patient_email" class="block font-bold mb-2">Email</label>
    <input autofocus="autofocus" autocomplete="email" type="email" name="patient[email]" id="patient_email" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring focus:ring-blue-200" />
  </div>

  <div class="mb-4">
    <label for="patient_password" class="block font-bold mb-2">Password</label>
    <input autocomplete="current-password" type="password" name="patient[password]" id="patient_password" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring focus:ring-blue-200" />
  </div>

  <div class="mb-4">
    <input name="patient[remember_me]" type="checkbox" value="1" id="patient_remember_me" class="mr-2" />
    <label for="patient_remember_me" class="inline-block">Remember me</label>
  </div>

  <div class="mb-4">
    <input type="submit" name="commit" value="Log in" class="w-full bg-fuchsia-500 text-white py-2 px-4 rounded-md hover:bg-fuchsia-600 transition-colors duration-300" />
  </div>

  <%= render "patients/shared/links" %>
</form>

