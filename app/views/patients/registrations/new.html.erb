





<%= form_with(model: resource, url: registration_path(resource_name), local: true) do |f| %>

  <h2 class="text-2xl font-bold mb-4 text-fuchsia-600">Sign up</h2>
  <%= render "patients/shared/error_messages", resource: resource %>
  <!-- Render "patients/shared/error_messages", resource: resource -->

  <div class="mb-4">
    <label for="patient_first_name" class="block font-bold mb-2">First name</label>
    <input autofocus="autofocus" type="text" name="patient[first_name]" id="patient_first_name" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring focus:ring-fuchsia-200" />
  </div>

  <div class="mb-4">
    <label for="patient_last_name" class="block font-bold mb-2">Last name</label>
    <input type="text" name="patient[last_name]" id="patient_last_name" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring focus:ring-fuchsia-200" />
  </div>

  <div class="mb-4">
    <label for="patient_phone" class="block font-bold mb-2">Phone</label>
    <input type="text" name="patient[phone]" id="patient_phone" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring focus:ring-fuchsia-200" />
  </div>

  <div class="mb-4">
    <label for="patient_address" class="block font-bold mb-2">Address</label>
    <input type="text" name="patient[address]" id="patient_address" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring focus:ring-fuchsia-200" />
  </div>

  <div class="mb-4">
    <label for="patient_gender" class="block font-bold mb-2">Gender</label>
    <input type="text" name="patient[gender]" id="patient_gender" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring focus:ring-fuchsia-200" />
  </div>

  <div class="mb-4">
    <label for="patient_email" class="block font-bold mb-2">Email</label>
    <input autofocus="autofocus" autocomplete="email" type="email" name="patient[email]" id="patient_email" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring focus:ring-fuchsia-200" />
  </div>

  <div class="mb-4">
    <label for="patient_password" class="block font-bold mb-2">Password
      <% if @minimum_password_length %>
        <em>(<%=@minimum_password_length %> characters minimum)</em>
      <% end %>
    </label>
    <input autocomplete="new-password" type="password" name="patient[password]" id="patient_password" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring focus:ring-fuchsia-200" />
  </div>

  <div class="mb-4">
    <label for="patient_password_confirmation" class="block font-bold mb-2">Password confirmation</label>
    <input autocomplete="new-password" type="password" name="patient[password_confirmation]" id="patient_password_confirmation" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring focus:ring-fuchsia-200" />
  </div>

  <div class="mb-4">
    <input type="submit" name="commit" value="Sign up" class="w-full bg-fuchsia-500 text-white py-2 px-4 rounded-md hover:bg-fuchsia-600 transition-colors duration-300" />
  </div>
  <%= render "patients/shared/links" %>
<% end %>


