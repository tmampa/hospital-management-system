<div class="p-4 sm:ml-64">
  <div class="p-4 border-2 border-fuchsia-200 border-dashed rounded-lg dark:border-fuchsia-700 mt-14">
    <h1 class="text-2xl font-semibold text-gray-900 dark:text-white">Manage Treatments</h1>
    <p class="mt-2 text-sm text-gray-600 dark:text-gray-400">Here you can view and manage your treatments.</p>

    <% if @completed_appointments.empty? %>
      <p>No completed appointments.</p>
    <% else %>
      <% @completed_appointments.each do |appointment| %>
        <div class="mt-4 bg-white shadow-md rounded-lg p-4">
          <h2 class="text-xl font-bold text-fuchsia-600 dark:text-fuchsia-400">Appointment
            with <%= appointment.patient.full_name %></h2>
          <p class="text-sm text-gray-500 dark:text-gray-400">Description: <%= appointment.description %></p>
          <p class="text-sm text-gray-500 dark:text-gray-400">Date: <%= appointment.date %></p>
          <p class="text-sm text-gray-500 dark:text-gray-400">Time: <%= appointment.time %></p>
          <p class="text-sm text-gray-500 dark:text-gray-400">Status: <%= appointment.status %></p>

          <% if appointment.treatment %>
            <h2 class="text-xl font-bold text-fuchsia-600 dark:text-fuchsia-400">Treatment</h2>
            <p class="text-sm text-gray-500 dark:text-gray-400">Prescription: <%= appointment.treatment.prescription %></p>
            <p class="text-sm text-gray-500 dark:text-gray-400">Diagnosis: <%= appointment.treatment.diagnosis %></p>
          <% else %>
            <%= form_with url: treatments_create_treatment_path, method: :post do |f| %>
              <%= f.hidden_field :appointment_id, value: appointment.id %>
              <%= f.text_field :prescription, placeholder: "Enter prescription" %>
              <%= f.text_field :diagnosis, placeholder: "Enter diagnosis" %>
              <%= f.submit 'Add Treatment', class: 'btn btn-primary' %>
            <% end %>
          <% end %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>