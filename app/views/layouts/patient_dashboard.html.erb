<!DOCTYPE html>
<html>
<head>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  <%= javascript_importmap_tags %>
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/flowbite/2.3.0/flowbite.min.css" rel="stylesheet"/>
  <script src="https://kit.fontawesome.com/ecb918b976.js" crossorigin="anonymous"></script>
  <%= javascript_include_tag 'rails-ujs' %>
</head>

<body class="text-gray-700">
<%= render 'patients/topnav' %>
<%= render 'patients/sidebar' %>

<main class="p-4 sm:ml-64">
  <% flash.each do |message_type, message| %>
    <div id="flash-message" class="fixed top-0 left-0 w-full z-50 p-2 text-sm <%= message_type == 'notice' ? 'bg-green-500' : 'bg-red-500' %> text-white flex items-center">
      <div id="loader" class="loader hidden mr-4"></div>
      <%= message %>
    </div>
  <% end %>
  <div class="p-4 overflow-y-auto  rounded-lg mt-14">
    <%= yield %>
  </div>
</main>

<script src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/2.3.0/flowbite.min.js"></script>
<script>
    window.setTimeout(function () {
        var flash = document.getElementById('flash-message');
        var loader = document.getElementById('loader');
        if (flash) {
            loader.style.display = 'block';
            window.setTimeout(function () {
                flash.style.display = 'none';
            }, 3000);
        }
    }, 0);
</script>


</body>
</html>
